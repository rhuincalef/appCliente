#:kivy 1.0

# NOTA: La clase que hereda de App tiene que tener el mismo nombre que el layout del 
# archivo .kv.

<MenuTiposFallaScreen>:
    GridLayout:
        #Propiedades de Controller (heredadas de BoxLayout)
        id: layout_principal
        orientation: 'vertical'
        cols: 1
        rows: 3
        btn_capturar_fallas: bt_capturar_fallas
        btn_subir_archivos: bt_subir_archivos
        btn_salir: bt_salir

        Button:
        	id: bt_capturar_fallas
        	text: "Capturar falla nuevas"
        	on_press: root.menu_falla_nueva()
        	#background_color: (255,255,255)

        Button:
        	id: bt_subir_archivos
        	text: "Obtener fallas del servidor"
        	on_press: root.menu_fallas_informadas()

        Button:	
        	id: bt_salir
        	on_press: root.manager.current = 'menu'
        	text: "Volver"
