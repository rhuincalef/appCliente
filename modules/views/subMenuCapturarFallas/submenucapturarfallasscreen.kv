#:kivy 1.0

# NOTA: La clase que hereda de App tiene que tener el mismo nombre que el layout del archivo .kv.
#:import icon iconfonts.icon
#:import TAMANIO_ICONOS constantes.TAMANIO_ICONOS
#:import COLOR_SPINNER constantes.COLOR_SPINNER
#:import TAMANIO_CUSTOM_ICONOS constantes.TAMANIO_CUSTOM_ICONOS
#:import const constantes

<CapturarFallasScreen>:

    GridLayout:
        id: main_layout
        cols: 2
        rows: 2
        #       padding (width,height)
        padding:[root.width * 0.05 ,root.height * 0.20]
        spacing: root.width / 14


        Button:
            id: bt_capturar_nueva_falla
            background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
            markup: True
            text: "%s Capturar falla nueva" % (icon('fa-camera',TAMANIO_ICONOS))
            on_press: root.capturar_falla_nueva()
            

        Button:
            id: bt_obtener_fallas_informadas
            background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
            markup: True
            text: "%s Obtener fallas informadas del servidor" % (icon('cf-obtenerinformadas',TAMANIO_CUSTOM_ICONOS))
            on_press: root.obtener_fallas_informadas()

            #text: "%s Obtener fallas informadas del servidor" % (icon('fa-cloud-download',TAMANIO_ICONOS + 20))


        Button:
            id: bt_capturar_falla_informada
            background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
            markup: True
            text: "Capturar falla informada"
            text: "%s Capturar falla informada" % (icon('cf-capturarinformadas',TAMANIO_CUSTOM_ICONOS))
            on_press: root.capturar_falla_informada()

