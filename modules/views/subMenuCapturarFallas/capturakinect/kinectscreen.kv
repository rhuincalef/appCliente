#:kivy 1.0
#:import const constantes

<KinectScreen>:
    id: kinect_screen

    #Atributos llamables por Python.
    
    label_wid: my_label
    main_layout: layout_principal
    nombre_captura: ""
    dir_trabajo: ""
    layout_kinect_images: layout_kinect
    
    kinect_rgb: imagen_rgb
    kinect_grey: imagen_grises

    GridLayout:
        id: layout_principal
        orientation: 'vertical'
        cols: 1
        rows: 3
        
        Label:
            id: my_label
            size_hint: (1,0.05)
            text: 'Captura de baches.Presione SPACEBAR para capturar.'


        GridLayout:
            id: layout_kinect
            orientation: 'horizontal'
            cols:2
            rows:1
            
            KinectViewer:
                id: imagen_rgb
                size_hint: (0.5,1)

            KinectViewerGreyScale:
                id: imagen_grises
                size_hint: (0.5,1)
            
        GridLayout:
            id: footer_layout
            cols:2
            rows:1
            #size_hint: (1,0.05)
            size_hint: (1,0.08)
            
            col_force_default: True
            col_default_width: const.COL_DEFAULT_WIDTH
            
            #Espaciado entre los componentes del layout (en porcentaje del widget)
            spacing: const.DEFAULT_SPACING

            #Relleno entre el layout y los widgets hijos
            padding: [const.DEFAULT_PADDING_HORIZONTAL,0,const.DEFAULT_PADDING_HORIZONTAL,0]

            Button:
                id: boton_capturar
                text: "Capturar"
                on_press: root.capturar()
                background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
                background_down: const.ESTILO_BOTON_DEFAULT_PRESIONADO


            Button:
                id: boton_cancelar
                text: "Volver"
                on_press: root.volver()
                background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
                background_down: const.ESTILO_BOTON_DEFAULT_PRESIONADO

            
