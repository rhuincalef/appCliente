#:kivy 1.0
# NOTA: La clase que hereda de App tiene que tener el mismo nombre que el layout del archivo .kv.


<SeleccionarTipoFallaScreen>:
    BoxLayout:
        id: main_layout
        mainLayout: main_layout
        orientation:'vertical'
        
        Label:
            id: label_text_input
            text: 'Seleccione el tipo de falla'
            size_hint:(1,0.2)

        BoxLayout:
            id: container_dropbox_falla
            orientation: 'vertical'
            size_hint:(1,0.6)


        #Footer con los botones de aceptar y cancelar
        BoxLayout:
        	id: footer_1
        	orientation: 'horizontal'
            padding: [250,290,250,0]
            spacing: 50
        	Button:
        		id: btn_aceptar
        		text: 'Aceptar'
        		on_press: root.buscarDireccion()

        	Button:
        		id: btn_cancelar
        		text: 'Cancelar'
        		on_press: root.cancelar()        

