#:kivy 1.0

# NOTA: La clase que hereda de App tiene que tener el mismo nombre que el layout del archivo .kv.
#:import icon iconfonts.icon
#:import TAMANIO_ICONOS constantes.TAMANIO_ICONOS
#:import COLOR_SPINNER constantes.COLOR_SPINNER
#:import const constantes


<SeleccionarBDScreen>:
    BoxLayout:
        #Propiedades de Controller (heredadas de BoxLayout)
        id: main_layout
        orientation: 'horizontal'
        
        #padding:[root.width * 0.20 ,root.height * 0.20]
        
        padding:[root.width * 0.11 ,root.height * 0.30]
        spacing: root.width / 15
            
        Button:
            id: bt_buscar_bd_anterior
            background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
            background_down: const.ESTILO_BOTON_DEFAULT_PRESIONADO
            markup: True
            text: "%s Buscar achivo anterior de BD" % (icon('fa-search',TAMANIO_ICONOS))
            on_press: root.buscar_bd_anterior()


        Button:
            id: bt_comenzar_nueva_bd
            background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
            background_down: const.ESTILO_BOTON_DEFAULT_PRESIONADO
            markup: True
            text: "%s Comenzar una BD nueva \n con la fecha actual(por defecto)" % (icon('fa-plus-circle',TAMANIO_ICONOS))
            on_press: root.comenzar_nueva_bd()


