#:kivy 1.0
# NOTA: La clase que hereda de App tiene que tener el mismo nombre que el layout del archivo .kv.
#:import const constantes

<ResultadosFiltradosScreen>:
    BoxLayout:
        id: main_layout
        orientation:'vertical'
        
        Label:
            id: label_resultados
            text: 'Seleccione uno de los siguientes archivos filtrados:'
            size_hint:(1,0.2)

        #Layout donde se agregan los archivos filtrados        
        BoxLayout:
        	id: layout_elementos_filtrados
	        #orientation:'vertical'
            size_hint:(1,0.5)

        #Footer con los botones de aceptar y cancelar
        GridLayout:
            id: footer_layout
            rows: 1
            cols: 2
            col_force_default: True
            col_default_width: const.COL_DEFAULT_WIDTH
            
            #Espaciado entre los componentes del layout (en porcentaje del widget)
            spacing: const.DEFAULT_SPACING

            #Relleno entre el layout y los widgets hijos
            #padding: [const.DEFAULT_PADDING_HORIZONTAL,300,const.DEFAULT_PADDING_HORIZONTAL,0]
            
            padding: [const.DEFAULT_PADDING_HORIZONTAL,root.height * 0.52,const.DEFAULT_PADDING_HORIZONTAL,0]


            Button:
                id: btn_aceptar
                text: 'Aceptar'
                on_press: root.seleccionarArchivo()

            Button:
                id: btn_cancelar
                text: 'Cancelar'
                on_press: root.cancelar()        



