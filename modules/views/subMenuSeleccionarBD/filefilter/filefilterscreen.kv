#:kivy 1.0
# NOTA: La clase que hereda de App tiene que tener el mismo nombre que el layout del archivo .kv.
#:import const constantes

<FileFilterScreen>:
    BoxLayout:
        id: main_layout
        mainLayout: main_layout
        orientation:'vertical'
        
        Label:
            id: label_text_input
            text: 'Ingrese la fecha de captura de la BD separada por hyphens(-). Por ej. 28-02-2012'
            size_hint:(1,0.2)

        TextInput:
            id: text_input_patron
            text: ''
            multiline: False
            size_hint:(1,0.1)

		# Layout horizontal que contiene el textinput y el boton que abre el xfolder para seleccionar directorios de busqueda.
        Label:
            id: label_x_folder
            text: "Seleccione los directorios donde se realizará la búsqueda: "
            size_hint: (1,0.2)            
        
        BoxLayout:
            id:layout_dirs_busqueda
	        orientation:'horizontal'
            size_hint:(1,0.1)

            TextInput:
                id: text_input_lista_directorios
                text: ''
                #size_hint --> (x,y)
                size_hint: (0.8,1)

            Button:
                id: boton_x_folder
                text: '(+)'
                size_hint: (0.2,1)
                on_press: root.onXFolderSeleccionado()
                background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
                background_down: const.ESTILO_BOTON_DEFAULT_PRESIONADO



        #Footer con los botones de aceptar y cancelar
        GridLayout:
            id: footer_layout

            rows: 1
            cols: 2
            col_force_default: True
            col_default_width: const.COL_DEFAULT_WIDTH
            
            #Espaciado entre los componentes del layout (en porcentaje del widget)
            spacing: const.DEFAULT_SPACING


            #Relleno entre el layout y los widgets hijos
            #padding: [const.DEFAULT_PADDING_HORIZONTAL,300,const.DEFAULT_PADDING_HORIZONTAL,0]
            padding: [const.DEFAULT_PADDING_HORIZONTAL,root.height * 0.54 ,const.DEFAULT_PADDING_HORIZONTAL,0]


            Button:
                id: btn_aceptar
                text: 'Aceptar'
                on_press: root.buscarArchivo()
                background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
                background_down: const.ESTILO_BOTON_DEFAULT_PRESIONADO


            Button:
                id: btn_cancelar
                text: 'Cancelar'
                on_press: root.cancelar()        
                background_normal: const.ESTILO_BOTON_DEFAULT_OPCIONES_MENU
                background_down: const.ESTILO_BOTON_DEFAULT_PRESIONADO


