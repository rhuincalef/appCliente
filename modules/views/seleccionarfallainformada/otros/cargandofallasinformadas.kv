#:kivy 1.0

#:import dictAdapter kivy.adapters.dictadapter
#:import compItem kivy.uix.listview
  
<CargaFallaInformada>:
	#Barra de progreso
	barra_progreso:progress_bar

    GridLayout:
		id: layout_principal
		orientation: 'vertical'
		cols: 1
		rows: 3

	    Label:
	    	id: titulo
	    	text: "Cargando fallas desde el servidor.Espere..."
	    	size_hint:(1,0.05)
	    	color: 0,0,0,1
			canvas.before:
	            Color:
	                rgba: 1,1,1, 1
	            Rectangle:
	                pos: self.pos
	                size: self.size
		
	    # Progressbar
	    GridLayout:
	    	orientation: 'horizontal'
	    	cols:3
	    	rows:1
	    	size_hint:(1,0.07)

	    	ProgressBar:
	    		id:progress_bar
	    		max: 100
	    		value: 0			


