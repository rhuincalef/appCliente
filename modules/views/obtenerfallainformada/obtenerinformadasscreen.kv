#:kivy 1.0

#:import dictAdapter kivy.adapters.dictadapter
#:import compItem kivy.uix.listview
  
<ObtenerInformadasScreen>:

    GridLayout:
		id: layout_principal
		orientation: 'vertical'
		cols: 1
		rows: 6

	    Label:
	    	id: titulo
	    	text: "Ingrese el nombre de la calle/altura de la que desea traer las fallas"
	    	size_hint:(1,0.05)
	    	color: 0,0,0,1
			canvas.before:
	            Color:
	                rgba: 1,1,1, 1
	            Rectangle:
	                pos: self.pos
	                size: self.size
		Label:
	    	id: calle_lbl
	    	text: "Calle: "
	    	size_hint:(1,0.05)
	    	color: 0,0,0,1
			canvas.before:
	            Color:
	                rgba: 1,1,1, 1
	            Rectangle:
	                pos: self.pos
	                size: self.size
		
	    TextInput:
	    	id: calle_txt
	    	size_hint:(1,0.05)
	    	focus: True
	    	#hint_text: 'i.e: Belgrano'
	    	on_text_validate: root.enviar_peticion(calle_txt.text,altura_txt.text)


		Label:
	    	id: altura_lbl
	    	text: "Altura: "
	    	size_hint:(1,0.05)
	    	color: 0,0,0,1
			canvas.before:
	            Color:
	                rgba: 1,1,1, 1
	            Rectangle:
	                pos: self.pos
	                size: self.size

	    TextInput:
	    	id: altura_txt
	    	size_hint:(1,0.05)
	    	input_filter: 'int'
	    	focus: False
	    	#hint_text : 'i.e: 200'
	    	on_text_validate: root.enviar_peticion(calle_txt.text,altura_txt.text)

		      
	    GridLayout:
	    	id: layout_botones
	    	orientation: 'horizontal'
	    	cols: 2
	    	rows: 1

	    	# Tamanio en porcentajes con respecto al widget anterior
	    	size_hint:(1,0.07)
	    	col_force_default: True
	    	col_default_width: 150

	    	#Espaciado entre los componentes del layout (en porcentaje del widget)
	    	spacing: ( root.width * 0.20 ),0

	    	#Relleno entre el layout y los widgets hijos
	    	padding: (root.width * 0.24),0,0,0

		    Button:
		    	id: bt_capturar_fallas
		    	text: "Solicitar fallas en calle"
		    	on_press: root.enviar_peticion(calle_txt.text,altura_txt.text)

			Button:	
				id: bt_volver
				text: "Volver"
				on_press: root.manager.current = 'menutiposfalla'
